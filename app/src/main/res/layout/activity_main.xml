<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MainActivity" android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal|center" android:layout_margin="7dp"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" android:paddingTop="10dp"
            android:gravity="center">
        <TextView
                android:text="लांबी (फूट )"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLength" android:textSize="25sp"
                android:gravity="center" android:textColor="@android:color/black" android:textStyle="normal|italic"/>
        <TextView
                android:text=": "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSep1" android:textSize="30sp" android:textStyle="bold"
                android:gravity="center"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/inputLength" android:gravity="center"
                android:background="@drawable/text_view_border" android:padding="5dp" android:textSize="20sp"
                android:hint="लांबी "/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" android:gravity="center" android:paddingTop="10dp"
    >
        <TextView
                android:text="रुंदी (फूट )"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewWidth" android:textSize="25sp"
                android:gravity="center" android:textColor="@android:color/black" android:textStyle="italic"/>
        <TextView
                android:text=": "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSep2" android:textSize="30sp" android:textStyle="bold"
                android:gravity="center"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/inputWidth" android:gravity="center"
                android:background="@drawable/text_view_border" android:padding="5dp" android:textSize="20sp"
                android:hint="रुंदी "/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" android:gravity="center" android:paddingTop="10dp"
    >
        <TextView
                android:text="दर (प्रति गुंठा ) "
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewRate" android:textSize="25sp" android:textStyle="italic"
                android:gravity="center" android:textColor="@android:color/black"/>
        <TextView
                android:text=": "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSep3" android:textSize="30sp" android:textStyle="bold"
                android:gravity="center"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/inputRate" android:gravity="center"
                android:background="@drawable/text_view_border" android:padding="5dp" android:textSize="20sp"
                android:hint="दर "/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" android:gravity="center" android:layout_marginTop="7sp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewError" android:textSize="0sp"
                android:gravity="center" android:textColor="@android:color/holo_red_dark"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" android:paddingTop="10dp" android:gravity="center"
            android:paddingBottom="10dp">
        <Button
                android:text=" गणना करा "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/calculateButton"
                android:padding="5sp" style="@style/Widget.AppCompat.Button"
                android:background="@drawable/rounded_corners_button" android:textColor="@android:color/white"
        />

        <Button
                android:text=" सर्व काढून टाका "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/clearButton"
                android:layout_marginLeft="10sp" android:padding="5sp"
                android:background="@drawable/rounded_corners_button" android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" android:gravity="center" android:paddingTop="10dp"
            android:layout_marginBottom="10sp">
        <TextView
                android:text="आपली गणना केलेली किंमत आहे "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewResult" android:textSize="25sp"
                android:gravity="center" android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" android:gravity="center"
            android:background="@drawable/text_view_border" android:layout_marginBottom="10sp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPrice" android:textSize="40sp"
                android:textStyle="bold"
                android:layout_margin="2dp" android:gravity="center" android:paddingTop="5sp"
                android:paddingBottom="5sp" android:hint="xxxx  रुपये "/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" android:gravity="center"
            android:layout_marginBottom="10sp">

        <Button
                android:text="शेतीविषयक इतर सूत्रे"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:id="@+id/otherFormulasButton"
        />

    </LinearLayout>


</LinearLayout>